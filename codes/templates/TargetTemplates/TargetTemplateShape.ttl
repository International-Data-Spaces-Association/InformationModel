@prefix dct: <http://purl.org/dc/terms/> .
@prefix dcat: <http://www.w3.org/ns/dcat#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ids: <https://w3id.org/idsa/core/> .
@prefix idsm: <https://w3id.org/idsa/metamodel/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix shapes: <https://github.com/International-Data-Spaces-Association/InformationModel/tree/master/testing> .


shapes:TargetTemplateShape
	a sh:NodeShape ;
	sh:or (
		[
			sh:nodeKind sh:IRI ; # it's an RDF URI
		]
		[
			sh:class ids:Collection ; # it's a simple Collection
			sh:property [
				sh:path         ids:contentRefinement ;
				sh:class 				ids:Constraint ;
				sh:maxCount     1 ;
				sh:minInclusive 1 ;
				sh:severity     sh:Violation ;
			] ;
		]
		[
			sh:class ids:Collection ; # it's a Collection with LogicalConstraints
			sh:property [
				sh:path [
					sh:or ( ids:OR ids:AND ids:XONE ids:andSequence );
				];
				sh:minInclusive 2 ;
				sh:class ids:LogicalConstraint ;
				sh:property [
					sh:path         ids:contentRefinement ;
					sh:class 				ids:Constraint ;
					sh:maxCount     1 ;
					sh:minInclusive 1 ;
					sh:severity     sh:Violation ;
				] ;
			] ;
		]
	) ;
	sh:message "<https://raw.githubusercontent.com/International-Data-Spaces-Association/InformationModel/master/testing/codes/TargetTemplates/TargetTemplateShape.ttl> (TargetTemplateShape): An _:TargetTemplate must (a) be a URI, (b) have a contentRefinement property linking to a ids:Constraint or (c) ."@en ;
.
