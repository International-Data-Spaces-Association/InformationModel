@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix ids: <https://w3id.org/idsa/core/> .
@prefix idsm: <https://w3id.org/idsa/metamodel/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix shapes: <https://github.com/IndustrialDataSpace/InformationModel/testing/> .

shapes:
	a owl:Ontology ;
	sh:declare [
		sh:prefix "rdf" ;
		sh:namespace "http://www.w3.org/1999/02/22-rdf-syntax-ns#"^^xsd:anyURI ;
	] ;

	sh:declare [
		sh:prefix "ids" ;
		sh:namespace "https://w3id.org/idsa/core/"^^xsd:anyURI ;
	] .


shapes:RequestMessageShape
	a sh:NodeShape ; 
	sh:targetClass ids:RequestMessage ;

	sh:sparql [
		a sh:SPARQLConstraint ;
		sh:message "<https://github.com/IndustrialDataSpace/InformationModel/testing/MessageShape.ttl> (RequestMessageShape): An ids:RequestMessage is a abstract class. Please use one of the subclasses for the generation of instances."@en ;
		sh:prefixes shapes: ;
		sh:select """
			SELECT ?this ?type
			WHERE {
				?this rdf:type ?type .
				FILTER (?type = ids:RequestMessage)
			}
		""" ;
	] .


shapes:ResponseMessageShape
	a sh:NodeShape ; 
	sh:targetClass ids:ResponseMessage ;

	sh:sparql [
		a sh:SPARQLConstraint ;
		sh:message "<https://github.com/IndustrialDataSpace/InformationModel/testing/MessageShape.ttl> (ResponseMessageShape): An ids:ResponseMessage is a abstract class. Please use one of the subclasses for the generation of instances."@en ;
		sh:prefixes shapes: ;
		sh:select """
			SELECT ?this ?type
			WHERE {
				?this rdf:type ?type .
				FILTER (?type = ids:ResponseMessage)
			}
		""" ;
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:correlationMessage ;
		sh:class ids:Message ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
		sh:severity sh:Violation ;
		sh:message "<https://github.com/IndustrialDataSpace/InformationModel/testing/MessageShape.ttl> (ResponseMessageShape): An ids:Message must have exactly one ids:Message linked through the ids:correlationMessage property"@en ; 
	] .


