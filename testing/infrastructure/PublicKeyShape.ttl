@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix ids: <https://w3id.org/idsa/core/> .
@prefix idsm: <https://w3id.org/idsa/metamodel/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix shapes: <https://github.com/IndustrialDataSpace/InformationModel/testing/> .

shapes:
	a owl:Ontology ;
	sh:declare [
		sh:prefix "rdf" ;
		sh:namespace "http://www.w3.org/1999/02/22-rdf-syntax-ns#"^^xsd:anyURI ;
	] ;

	sh:declare [
		sh:prefix "ids" ;
		sh:namespace "https://w3id.org/idsa/core/"^^xsd:anyURI ;
	] .


shapes:PublicKeyShape
	a sh:NodeShape ; 
	sh:targetClass ids:PublicKey ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:keyType ;
		sh:class ids:KeyType ;
		sh:severity sh:Violation ;
		sh:message "<https://github.com/IndustrialDataSpace/InformationModel/testing/PublicKeyShape.ttl> (PublicKeyShape): An ids:keyType property must point from an ids:PublicKey to an ids:KeyType."@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:keyValue ;
		sh:datatype xsd:base64Binary ;
		sh:severity sh:Violation ;
		sh:message "<https://github.com/IndustrialDataSpace/InformationModel/testing/PublicKeyShape.ttl> (PublicKeyShape): An ids:keyValue property must point from an ids:PublicKey to an xsd:base64Binary."@en ; 
	] .


shapes:KeyTypeShape
	a sh:NodeShape ; 
	sh:targetClass ids:KeyType ;

	sh:sparql [
		a sh:SPARQLConstraint ;
		sh:message "<https://github.com/IndustrialDataSpace/InformationModel/testing/PublicKeyShape.ttl> (KeyTypeShape): An ids:KeyType is a abstract class. Please use one of the subclasses for the generation of instances."@en ;
		sh:prefixes shapes: ;
		sh:select """
			SELECT ?this ?type
			WHERE {
				?this rdf:type ?type .
				FILTER (?type = ids:KeyType)
			}
		""" ;
	] .

