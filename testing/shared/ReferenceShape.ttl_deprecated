@prefix dc: <http://purl.org/dc/elements/1.1/> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix dcmitype: <http://purl.org/dc/dcmitype/> .
@prefix ids: <https://w3id.org/idsa/core/> .
@prefix idsm: <https://w3id.org/idsa/metamodel/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix shapes: <https://w3id.org/idsa/metamodel/shapes/> .

shapes:
	a owl:Ontology ;
	sh:declare [
		sh:prefix "rdf" ;
		sh:namespace "http://www.w3.org/1999/02/22-rdf-syntax-ns#"^^xsd:anyURI ;
	] ;

	sh:declare [
		sh:prefix "ids" ;
		sh:namespace "https://w3id.org/idsa/core/"^^xsd:anyURI ;
	] .


shapes:ResourceReferenceShape
	a sh:NodeShape ; 
	sh:targetClass ids:ResourceReference ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:resourceLiteral ;
		sh:datatype xsd:string ;
		sh:severity sh:Violation ;
		sh:message "<https://w3id.org/idsa/metamodel/shapes/ReferenceShape.ttl_deprecated> (ResourceReferenceShape): An ids:resourceLiteral property must point from an ids:ResourceReference to an xsd:string."@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:resourceBase64 ;
		sh:datatype xsd:string ;
		sh:severity sh:Violation ;
		sh:message "<https://w3id.org/idsa/metamodel/shapes/ReferenceShape.ttl_deprecated> (ResourceReferenceShape): An ids:resourceBase64 property must point from an ids:ResourceReference to an xsd:string."@en ; 
	] .

