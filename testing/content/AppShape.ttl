@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ids: <https://w3id.org/idsa/core/> .

@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix shapes: <https://github.com/International-Data-Spaces-Association/InformationModel/tree/master/testing/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .

shapes:
	a owl:Ontology ;
	sh:declare [
		sh:prefix "rdf" ;
		sh:namespace "http://www.w3.org/1999/02/22-rdf-syntax-ns#"^^xsd:anyURI ;
	] ;

	sh:declare [
		sh:prefix "ids" ;
		sh:namespace "https://w3id.org/idsa/core/"^^xsd:anyURI ;
	] .


shapes:AppShape
	a sh:NodeShape ;
	sh:targetClass ids:App ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:appDocumentation ;
		sh:or (
				  [
					  sh:datatype xsd:string ;
				  ]
				  [
					  sh:datatype rdf:langString ;
				  ]
			  );
		sh:severity sh:Violation ;
		sh:maxCount 1 ;
		sh:message "<https://raw.githubusercontent.com/International-Data-Spaces-Association/InformationModel/master/testing/content/AppShape.ttl> (AppShape): An ids:appDocumentation property must point from an ids:App to a xsd:string."@en ;
	];

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:appType ;
		sh:class ids:AppType ;
		sh:minCount 1;
		sh:severity sh:Violation ;
		sh:message "<https://raw.githubusercontent.com/International-Data-Spaces-Association/InformationModel/master/testing/content/AppShape.ttl> (AppShape): An ids:appType property must point from an ids:App to at least one ids:AppType."@en ;
	];
	
	sh:property [
		a sh:PropertyShape ;
		sh:path ids:supportedUsagePolicies ;
		sh:class ids:UsagePolicyClass ;
		sh:severity sh:Violation ;
		sh:message "<https://raw.githubusercontent.com/International-Data-Spaces-Association/InformationModel/master/testing/content/AppShape.ttl> (AppShape): An ids:supportedUsagePolicies property must point from an ids:App to at least one ids:UsagePolicyClass."@en ;
	];
	
	sh:property [
		a sh:PropertyShape ;
		sh:path ids:endpointBinding ;
		sh:class ids:EndpointBinding ;
		sh:minCount 1;
		sh:severity sh:Violation ;
		sh:message "<https://raw.githubusercontent.com/International-Data-Spaces-Association/InformationModel/master/testing/content/AppShape.ttl> (AppShape): An ids:endpointBinding property must point from an ids:App to at least one ids:EndpointBinding."@en ;
	];

	sh:or (
		[
		sh:property [
			a sh:PropertyShape ;
			sh:path ids:appContainerSpec ;
			sh:datatype xsd:string ;
			sh:severity sh:Violation ;
			sh:maxCount 1 ;
			sh:message "<https://raw.githubusercontent.com/International-Data-Spaces-Association/InformationModel/master/testing/content/AppShape.ttl> (AppShape): An ids:appContainerSpec property must point from an ids:App to a xsd:string."@en ;
			]
		]
		[
		sh:property [
				a sh:PropertyShape ;
				sh:path ids:appContainerSpecReference ;
				sh:nodeKind sh:IRI ;
				sh:severity sh:Violation ;
				sh:maxCount 1 ;
				sh:message "<https://raw.githubusercontent.com/International-Data-Spaces-Association/InformationModel/master/testing/content/AppShape.ttl> (AppShape): An ids:appContainerSpecReference property must point from an ids:App to a IRI."@en ;
			]
		]
		);
.
