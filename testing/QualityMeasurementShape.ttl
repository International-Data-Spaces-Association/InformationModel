@prefix dct: <http://purl.org/dc/terms/> .
@prefix ids: <https://w3id.org/idsa/core/> .
@prefix dqv: <http://www.w3.org/ns/dqv#> .

@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix shapes: <https://github.com/International-Data-Spaces-Association/InformationModel/tree/master/testing/> .

shapes:
	a owl:Ontology ;
	sh:declare [
		sh:prefix "rdf" ;
		sh:namespace "http://www.w3.org/1999/02/22-rdf-syntax-ns#"^^xsd:anyURI ;
	] ;

	sh:declare [
		sh:prefix "ids" ;
		sh:namespace "https://w3id.org/idsa/core/"^^xsd:anyURI ;
	] ;

    sh:declare [
		sh:prefix "dqv" ;
		sh:namespace "http://www.w3.org/ns/dqv#"^^xsd:anyURI ;
	] .

shapes:QualityMeasurementShape
	a sh:NodeShape ;
	sh:targetClass dqv:QualityMeasurement ;

	sh:property [
		a sh:PropertyShape ;
		sh:path dqv:isMeasurementOf ;
		sh:class dqv:Metric ;
		sh:severity sh:Violation ;
		sh:message "<https://raw.githubusercontent.com/International-Data-Spaces-Association/InformationModel/master/testing/QualityMeasurementShape.ttl> (QualityMeasurementShape): An dqv:isMeasurementOf must point from an dqv:QualityMeasurement to an dqv:Dimension."@en ;
	] ;

    sh:property [
		a sh:PropertyShape ;
		sh:path dqv:value ;
        sh:or (
				  [
					  sh:datatype xsd:decimal ;
				  ]
				  [
					  sh:datatype xsd:double ;
				  ]
                  [
					  sh:datatype xsd:boolean ;
				  ]
			  );
		sh:severity sh:Violation ;
		sh:message "<https://raw.githubusercontent.com/International-Data-Spaces-Association/InformationModel/master/testing/QualityMeasurementShape.ttl> (QualityMeasurementShape): An dqv:value must point from an dqv:QualityMeasurement to a literal of datatype decimal, double or boolean"@en ;
	]
.
