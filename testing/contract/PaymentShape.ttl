@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix odrl: <http://www.w3.org/ns/odrl/2/> .
@prefix ids: <https://w3id.org/idsa/core/> .
@prefix idsm: <https://w3id.org/idsa/metamodel/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix shapes: <https://github.com/international-Data-Spaces-Association/InformationModel/testing> .

shapes:
	a owl:Ontology ;
	sh:declare [
		sh:prefix "rdf" ;
		sh:namespace "http://www.w3.org/1999/02/22-rdf-syntax-ns#"^^xsd:anyURI ;
	] ;

	sh:declare [
		sh:prefix "ids" ;
		sh:namespace "https://w3id.org/idsa/core/"^^xsd:anyURI ;
	] .


shapes:PaymentModelShape
	a sh:NodeShape ; 
	sh:targetClass ids:PaymentModel ;

	sh:sparql [
		a sh:SPARQLConstraint ;
		sh:message "<https://raw.githubusercontent.com/IndustrialDataSpace/InformationModel/master/testing/contract/PaymentShape.ttl> (PaymentModelShape): An ids:PaymentModel is a abstract class. Please use one of the subclasses for the generation of instances."@en ;
		sh:prefixes shapes: ;
		sh:select """
			SELECT ?this ?type
			WHERE {
				?this rdf:type ?type .
				FILTER (?type = ids:PaymentModel)
			}
		""" ;
	] .


shapes:ImmediatePaymentShape
	a sh:NodeShape ; 
	sh:targetClass ids:ImmediatePayment ;

	sh:sparql [
		a sh:SPARQLConstraint ;
		sh:message "<https://raw.githubusercontent.com/IndustrialDataSpace/InformationModel/master/testing/contract/PaymentShape.ttl> (ImmediatePaymentShape): An ids:ImmediatePayment is a abstract class. Please use one of the subclasses for the generation of instances."@en ;
		sh:prefixes shapes: ;
		sh:select """
			SELECT ?this ?type
			WHERE {
				?this rdf:type ?type .
				FILTER (?type = ids:ImmediatePayment)
			}
		""" ;
	] .

