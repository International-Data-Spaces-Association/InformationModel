@prefix daq: <http://purl.org/eis/vocab/daq#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix dqv: <http://www.w3.org/ns/dqv#> .
@prefix dqvno: <https://data.norge.no/vocabulary/dqvno#> .
@prefix ids: <https://w3id.org/idsa/core/> .
@prefix odrl: <http://www.w3.org/ns/odrl/2/> .
@prefix owl:  <http://www.w3.org/2002/07/owl#> .
@prefix qb: <http://purl.org/linked-data/cube#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix vann: <http://purl.org/vocab/vann/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix shapes: <https://github.com/International-Data-Spaces-Association/InformationModel/tree/master/testing/> .


shapes:
	a owl:Ontology ;
	sh:declare [
		sh:prefix "rdf" ;
		sh:namespace "http://www.w3.org/1999/02/22-rdf-syntax-ns#"^^xsd:anyURI ;
	] ;

	sh:declare [
		sh:prefix "ids" ;
		sh:namespace "https://w3id.org/idsa/core/"^^xsd:anyURI ;
	] .


shapes:QualityMeasurementShape
	a sh:NodeShape ;
	sh:targetClass dqv:QualityMeasurement ;

	sh:property [
		a sh:PropertyShape ;
		sh:path dqv:isMeasurementOf ;
		sh:class dqv:Metric ;
        sh:maxCount 1 ;
		sh:severity sh:Violation ;
		sh:message "<https://raw.githubusercontent.com/International-Data-Spaces-Association/InformationModel/master/testing/quality/QualityMeasurementShape.ttl> (QualityMeasurementShape): A dqv:QualityMeasurement must have a maximum of one dqv:Metric linked through the dqv:isMeasurementOf property"@en ;
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path dqv:value ;
		sh:class rdfs:Literal ;
        sh:maxCount 1 ;
		sh:severity sh:Violation ;
		sh:message "<https://raw.githubusercontent.com/International-Data-Spaces-Association/InformationModel/master/testing/quality/QualityMeasurementShape.ttl> (QualityMeasurementShape): An dqv:QualityMeasurement must have a maximum of one rdfs:Literal linked through the dqv:value property"@en ;
	] ;

.