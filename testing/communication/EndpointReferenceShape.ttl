@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ids: <https://w3id.org/idsa/core/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix shapes: <https://github.com/International-Data-Spaces-Association/InformationModel/tree/master/testing/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .

shapes:
	a owl:Ontology ;
	sh:declare [
		sh:prefix "rdf" ;
		sh:namespace "http://www.w3.org/1999/02/22-rdf-syntax-ns#"^^xsd:anyURI ;
	] ;

	sh:declare [
		sh:prefix "ids" ;
		sh:namespace "https://w3id.org/idsa/core/"^^xsd:anyURI ;
	] .


shapes:EndpointReferenceShape
	a sh:NodeShape ;
	sh:targetClass ids:EndpointReference ;
	
	sh:property [
		a sh:PropertyShape ;
		sh:path ids:value ;
		sh:datatype xsd:string ;
		sh:severity sh:Violation ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
		sh:message "<https://raw.githubusercontent.com/International-Data-Spaces-Association/InformationModel/master/testing/content/EndpointReferenceShape.ttl> (EndpointReferenceShape): Exactly one ids:value property must point from an ids:EndpointReference to a xsd:string."@en ;
		];

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:appEndpointType ;
		sh:class ids:AppEndpointType ;
		sh:severity sh:Violation ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
		sh:message "<https://raw.githubusercontent.com/International-Data-Spaces-Association/InformationModel/master/testing/content/EndpointReferenceShape.ttl> (EndpointReferenceShape): Exactly one ids:appEndpointType property must point from an ids:EndpointReference to ids:AppEndpointType."@en ;
	];		
.
