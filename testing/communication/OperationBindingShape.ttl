@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix ids: <https://w3id.org/idsa/core/> .

@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix shapes: <https://github.com/International-Data-Spaces-Association/InformationModel/tree/master/testing/> .

shapes:
	a owl:Ontology ;
	sh:declare [
		sh:prefix "rdf" ;
		sh:namespace "http://www.w3.org/1999/02/22-rdf-syntax-ns#"^^xsd:anyURI ;
	] ;

	sh:declare [
		sh:prefix "ids" ;
		sh:namespace "https://w3id.org/idsa/core/"^^xsd:anyURI ;
	] .


shapes:OperationBindingShape
	a sh:NodeShape ; 
	sh:targetClass ids:OperationBinding ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:apiDocument ;
		sh:class ids:Resource ;
		sh:severity sh:Violation ;
		sh:message "<https://raw.githubusercontent.com/International-Data-Spaces-Association/InformationModel/master/testing/communication/OperationBindingShape.ttl> (OperationBindingShape): An ids:apiDocument property must point from an ids:OperationBinding to an ids:Resource."@en ;
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:boundOperation ;
		sh:class ids:Operation ;
		sh:severity sh:Violation ;
		sh:message "<https://raw.githubusercontent.com/International-Data-Spaces-Association/InformationModel/master/testing/communication/OperationBindingShape.ttl> (OperationBindingShape): An ids:boundOperation property must point from an ids:OperationBinding to an ids:Operation."@en ;
	] .

