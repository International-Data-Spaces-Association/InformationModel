@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ids: <https://w3id.org/idsa/core/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix shapes: <https://github.com/International-Data-Spaces-Association/InformationModel/tree/master/testing/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .

shapes:
	a owl:Ontology ;
	sh:declare [
		sh:prefix "rdf" ;
		sh:namespace "http://www.w3.org/1999/02/22-rdf-syntax-ns#"^^xsd:anyURI ;
	] ;

	sh:declare [
		sh:prefix "ids" ;
		sh:namespace "https://w3id.org/idsa/core/"^^xsd:anyURI ;
	] .


shapes:EndpointBindingShape
	a sh:NodeShape ;
	sh:targetClass ids:EndpointBinding ;

	sh:xone (
		[
		sh:property [
			a sh:PropertyShape ;
			sh:path ids:apiSpec ;
			sh:datatype xsd:string ;
			sh:severity sh:Violation ;
			sh:minCount 1 ;
			sh:maxCount 1 ;
			sh:message "<https://raw.githubusercontent.com/International-Data-Spaces-Association/InformationModel/master/testing/content/EndpointBindingShape.ttl> (EndpointBindingShape): An ids:apiSpec property must point from an ids:EndpointBinding to a xsd:string."@en ;
			]
		]
		[
		sh:property [
			a sh:PropertyShape ;
			sh:path ids:apiSpecReference ;
			sh:nodeKind sh:IRI ;
			sh:severity sh:Violation ;
			sh:minCount 1 ;
			sh:maxCount 1 ;
			sh:message "<https://raw.githubusercontent.com/International-Data-Spaces-Association/InformationModel/master/testing/content/EndpointBindingShape.ttl> (EndpointBindingShape): An ids:apiSpecReference property must point from an ids:EndpointBinding to a xsd:anyURI."@en ;
			]
		]
		);

  sh:property [
		a sh:PropertyShape ;
		sh:path ids:apiSpecVersion ;
		sh:datatype xsd:string ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
		sh:severity sh:Violation ;
		sh:message "<https://raw.githubusercontent.com/International-Data-Spaces-Association/InformationModel/master/testing/content/EndpointBindingShape.ttl> (EndpointBindingShape): An ids:apiSpecVersion property must not have more than one point from an ids:EndpointBinding to an xsd:string."@en;
		];
		
  sh:property [
		a sh:PropertyShape ;
		sh:path ids:protocolType ;
		sh:class ids:ProtocolType ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
		sh:severity sh:Violation ;
		sh:message "<https://raw.githubusercontent.com/International-Data-Spaces-Association/InformationModel/master/testing/content/EndpointBindingShape.ttl> (EndpointBindingShape): Exactly one ids:protocolType property must point from an ids:EndpointBinding to the ids:ProtocolType class."@en;
		];

  sh:property [
		a sh:PropertyShape ;
		sh:path ids:endpointReference ;
		sh:class ids:EndpointReference ;
		sh:minCount 1 ;
		sh:severity sh:Violation ;
		sh:message "<https://raw.githubusercontent.com/International-Data-Spaces-Association/InformationModel/master/testing/content/EndpointBindingShape.ttl> (EndpointBindingShape): At least one ids:endpointReference property must point from an ids:EndpointBinding to the ids:EndpointReference class."@en;
		];
.